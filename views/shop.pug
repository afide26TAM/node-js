extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://cdn.pixabay.com/photo/2017/03/02/05/14/bible-2110439_960_720.jpg", alt="The Bible")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many interesting things 
                        .card__actions
                            button.btn Add to cart
        else 
            h1 No Products

        

                        
